<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetImage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/green"
            android:elevation="4dp"
            android:color="@color/white"
            android:clickable="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Select snake Bite  image"
            android:id="@+id/title"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_marginTop="60dp"
            android:textColor="@color/white2"
            />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_below="@id/title"
            android:id="@+id/imageview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:background="@drawable/nonvenomous"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/selectDetect"
            android:layout_below="@+id/imageview"
            android:layout_marginTop="120dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/galleryicon"
                android:id="@+id/selectBtn"
                android:layout_marginRight="80dp"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cameraicon"
                android:id="@+id/captureBtn"
                android:layout_marginLeft="80dp"
                />

        </LinearLayout>

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Detect Image"
            android:layout_below="@id/selectDetect"
            android:id="@+id/detectBtn"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            android:background="@drawable/button_normal"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="40dp"
            android:id="@+id/resulttext"
            android:layout_below="@id/detectBtn"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</ScrollView>
